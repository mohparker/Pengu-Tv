<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdministratorReviews"
    android:background="@drawable/premium_dark">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".AdministratorUsers"
        tools:ignore="MissingConstraints"
        >
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">





            <Space
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                />

            <ImageView
                android:id="@+id/reviewIcon"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.9"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.05"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Reviews"
                android:textColor="@color/white"
                android:textSize="30dp"
                android:textAlignment="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.178"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />


            <Space
                android:layout_width="wrap_content"
                android:layout_height="20dp"

                />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="___________________________________________"
                android:textAlignment="center"
                android:textColor="@color/white"/>

            <Button
                android:id="@+id/btnAddReviewHelp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="360dp"
                android:background="?android:attr/selectableItemBackground"
                android:drawableStart="@drawable/ic_help"

                />
            <Spinner
                android:id="@+id/spinnerAddReviewAnime"
                android:layout_height="match_parent"
                android:drawableStart="@drawable/ic_baseline_live_tv_24"
                android:layout_width="200dp"

                android:textColor="@color/white"
                android:textColorHint="#696969"
                android:hint="   Genre"
                android:layout_marginHorizontal="140dp"/>

            <EditText
                android:id="@+id/edtAddReviewUserName"
                android:layout_height="match_parent"
                android:drawableStart="@drawable/ic_person"
                android:drawableTint="@color/white"
                android:layout_width="200dp"
                android:text=""
                android:textColor="@color/white"
                android:textColorHint="#696969"
                android:hint="   UserName"
                android:layout_marginHorizontal="140dp"/>
            <EditText
                android:id="@+id/edtAddReviewAnimeDescription"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text=""
                android:hint=" Review  Description:"
                android:inputType="textMultiLine"
                android:lines="6"
                android:background="@drawable/text_area_outline"
                android:textColorHint="#696969"
                android:gravity="top"
                android:textColor="@color/white"
                android:layout_marginHorizontal="140dp"

                />
            <EditText
                android:id="@+id/edtAddReviewAnimeRating"
                android:layout_height="match_parent"
                android:drawableStart="@drawable/ic_baseline_star_rate_24"
                android:layout_width="200dp"
                android:text=""
                android:inputType="numberDecimal"
                android:textColor="@color/white"
                android:textColorHint="#696969"
                android:hint="   Personal Rating"
                android:layout_marginHorizontal="140dp"/>
            <Space
                android:layout_width="wrap_content"
                android:layout_height="20dp"

                />
            <Button
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:id="@+id/btnAddReview"
                android:background="@drawable/outline_button"
                android:text="Add Review"
                android:textColor="@color/white"
                android:layout_marginHorizontal="55dp"
                />
            <Space
                android:layout_width="wrap_content"
                android:layout_height="20dp"

                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="___________________________________________"
                android:textAlignment="center"
                android:textColor="@color/white"/>

            <Button
                android:id="@+id/btnUpdateReviewHelp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="360dp"
                android:background="?android:attr/selectableItemBackground"
                android:drawableStart="@drawable/ic_help"

                />
            <EditText
                android:id="@+id/edtUpdateReviewId"
                android:layout_height="match_parent"
                android:drawableStart="@drawable/ic_baseline_123_24"
                android:layout_width="200dp"
                android:text=""
                android:textColor="@color/white"
                android:textColorHint="#696969"
                android:hint="   Review Id"
                android:layout_marginHorizontal="140dp"/>
            <EditText
                android:id="@+id/edtUpdateReviewUsername"
                android:layout_height="match_parent"
                android:drawableStart="@drawable/ic_person"
                android:layout_width="200dp"
                android:text=""
                android:textColor="@color/white"
                android:drawableTint="@color/white"
                android:textColorHint="#696969"
                android:hint="   Username"
                android:layout_marginHorizontal="140dp"/>
            <EditText
            android:id="@+id/edtUpdateReviewAnimeDescription"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text=""
            android:hint=" Review  Description:"
            android:inputType="textMultiLine"
            android:lines="6"
            android:background="@drawable/text_area_outline"
            android:textColorHint="#696969"
            android:gravity="top"
            android:textColor="@color/white"
            android:layout_marginHorizontal="140dp"

            />
            <EditText
                android:id="@+id/edtUpdateReviewRating"
                android:layout_height="match_parent"
                android:drawableStart="@drawable/ic_baseline_star_rate_24"
                android:layout_width="200dp"
                android:text=""
                android:inputType="numberDecimal"
                android:textColor="@color/white"
                android:drawableTint="@color/white"
                android:textColorHint="#696969"
                android:hint="   Personal Rating"
                android:layout_marginHorizontal="140dp"/>
            <Space
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                />
            <Button
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:id="@+id/btnUpdateReview"
                android:background="@drawable/outline_button"
                android:text="Update Review"
                android:textColor="@color/white"
                android:layout_marginHorizontal="55dp"
                />
            <Space
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="___________________________________________"
                android:textAlignment="center"
                android:textColor="@color/white"/>
            <Button
                android:id="@+id/btnDeleteReviewHelp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="360dp"
                android:background="?android:attr/selectableItemBackground"
                android:drawableStart="@drawable/ic_help"

                />



            <EditText
                android:id="@+id/edtReviewName"
                android:layout_height="match_parent"
                android:drawableStart="@drawable/ic_baseline_live_tv_24"
                android:layout_width="200dp"
                android:text=""
                android:textColor="@color/white"
                android:textColorHint="#696969"
                android:hint="   Anime Name"
                android:layout_marginHorizontal="140dp"/>

            <EditText
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text=""
                android:hint="   UserName"
                android:textColorHint="#696969"
                android:id="@+id/edtDeleteReviewUserame"
                android:textColor="@color/white"
                android:layout_marginHorizontal="140dp"
                android:drawableStart="@drawable/ic_person"
                android:drawableTint="@color/white"/>


            <EditText
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text=""
                android:hint="   Personal Rating"
                android:inputType="numberDecimal"
                android:textColorHint="#696969"
                android:textColor="@color/white"
                android:id="@+id/edtDeletePersonalRating"
                android:layout_marginHorizontal="140dp"
                android:drawableStart="@drawable/ic_baseline_star_rate_24"
                android:drawableTint="@color/white"/>
            <EditText
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text=""
                android:hint="   Review Id"
                android:id="@+id/edtDeleteReviewId"
                android:inputType="number"
                android:textColorHint="#696969"
                android:textColor="@color/white"
                android:layout_marginHorizontal="140dp"
                android:drawableStart="@drawable/ic_baseline_123_24"
                android:drawableTint="@color/white"/>

            <Space
                android:layout_width="wrap_content"
                android:layout_height="20dp"/>
            <Button
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:id="@+id/btnDeleteReview"
                android:background="@drawable/outline_button"
                android:text="Delete Review"
                android:textColor="@color/white"
                android:layout_marginHorizontal="55dp"
                />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="20dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="___________________________________________"
                android:textAlignment="center"
                android:textColor="@color/white"
                />
            <Button
                android:id="@+id/btnSearchReviewHelp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="360dp"
                android:background="?android:attr/selectableItemBackground"
                android:drawableStart="@drawable/ic_help"
                android:textColor="@color/white"
                />

            <EditText
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text=""
                android:id="@+id/edtSearchFindReviewId"
                android:hint="   Review Id"
                android:inputType="numberDecimal"
                android:textColorHint="#696969"
                android:textColor="@color/white"
                android:layout_marginHorizontal="140dp"
                android:drawableStart="@drawable/ic_baseline_123_24"
                android:drawableTint="@color/white"/>
            <Space
                android:layout_width="wrap_content"
                android:layout_height="20dp"/>
            <Button
                android:onClick="search_Review"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:background="@drawable/outline_button"
                android:text="Search Review"
                android:textColor="@color/white"
                android:layout_marginHorizontal="55dp"/>

            <Space
                android:layout_width="wrap_content"
                android:layout_height="20dp"/>
            <TextView
                android:id="@+id/txtReviewId"
                android:layout_width="300dp"
                android:layout_height="wrap_content"

                android:textSize="16dp"
                android:text="Review Id:"
                android:textColor="@color/white"
                android:layout_marginHorizontal="55dp"/>
            <TextView
                android:id="@+id/txtReviewUserId"
                android:layout_width="300dp"
                android:layout_height="wrap_content"

                android:textSize="16dp"
                android:text="User Id:"
                android:textColor="@color/white"
                android:layout_marginHorizontal="55dp"/>
            <TextView
            android:id="@+id/txtReviewAnimeId"
            android:layout_width="300dp"
            android:layout_height="wrap_content"

            android:textSize="16dp"
            android:text="Anime Id:"
            android:textColor="@color/white"
            android:layout_marginHorizontal="55dp"/>
            <TextView
                android:id="@+id/txtReviewDescription"
                android:layout_width="300dp"
                android:layout_height="wrap_content"

                android:textSize="16dp"
                android:text="Description:"
                android:textColor="@color/white"
                android:layout_marginHorizontal="55dp"/>
            <TextView
                android:id="@+id/txtReviewRating"
                android:layout_width="300dp"
                android:layout_height="wrap_content"

                android:textSize="16dp"
                android:text="Personal Rating:"
                android:textColor="@color/white"
                android:layout_marginHorizontal="55dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="___________________________________________"
                android:textAlignment="center"
                android:textColor="@color/white"/>
            <Space
                android:layout_width="wrap_content"
                android:layout_height="20dp"/>
            <Button
                android:id="@+id/btnViewAllReviewsHelp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="360dp"
                android:background="?android:attr/selectableItemBackground"
                android:drawableStart="@drawable/ic_help"
                android:textColor="@color/white"
                />

            <EditText
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text=""
                android:id="@+id/edtViewReview"
                android:hint="   Aniem Id"
                android:textColorHint="#696969"
                android:textColor="@color/white"
                android:layout_marginHorizontal="140dp"
                android:drawableStart="@drawable/ic_baseline_123_24"
                android:drawableTint="@color/white"/>
            <Space
                android:layout_width="wrap_content"
                android:layout_height="20dp"/>
            <Button
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:id="@+id/btnViewReviews"
                android:background="@drawable/outline_button"
                android:text="View Reviews"
                android:layout_marginHorizontal="55dp"
                android:textColor="@color/white"/>
            <Space
                android:layout_width="wrap_content"
                android:layout_height="20dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="___________________________________________"
                android:textAlignment="center"
                android:textColor="@color/white"/>
            <Space
                android:layout_width="wrap_content"
                android:layout_height="20dp"/>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>